<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.fxmisc.richtext.*?>

<AnchorPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.QueryController">
   <children>
        <VBox prefHeight="740.0" prefWidth="1280.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <InlineCssTextArea fx:id="theTextCommands" editable="true" prefHeight="300.0" prefWidth="1260.0" wrapText="true" />
                <ButtonBar>
                    <buttons>
                        <Label maxWidth="80.0" text="Connection" />
                        <ComboBox fx:id="theComboConns" onAction="#onChangeConns" prefWidth="150.0" />
                        <Button fx:id="theBtExecute" maxWidth="80.0" mnemonicParsing="false" onAction="#onExecute" prefWidth="80.0" text="Execute" />
                        <Button fx:id="theBtExport" maxWidth="80.0" mnemonicParsing="false" onAction="#onExport" text="Export" />
                  <Pane prefHeight="33.0" />
                        <Label maxWidth="100.0" prefHeight="17.0" text="Number Of Rows" textAlignment="RIGHT" />
                        <ComboBox fx:id="theComboRowCount" maxWidth="50.0" minWidth="69.0" onAction="#onChangeRowCount" prefHeight="25.0" />
                        <Button fx:id="theBtPrevPage" maxWidth="30.0" minWidth="48.0" mnemonicParsing="false" onAction="#onPrevPage" prefHeight="25.0" text="&lt;" />
                        <TextField fx:id="theEditPageNum" maxWidth="25.0" onAction="#onChangePageNumber" />
                        <Label fx:id="theLabelTotalPages" maxWidth="30.0" minWidth="40.0" prefHeight="17.0" prefWidth="25.0" text="/0" />
                        <Button fx:id="theBtNextPage" maxWidth="25.0" minWidth="8.0" mnemonicParsing="false" onAction="#onNextPage" prefHeight="25.0" text="&gt;" />
                        <Pane prefHeight="40.0" HBox.hgrow="ALWAYS" />
                    </buttons>
                </ButtonBar>
                <TableView fx:id="theTableResult" VBox.vgrow="ALWAYS" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
   </children>
</AnchorPane>
